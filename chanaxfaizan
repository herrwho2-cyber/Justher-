        }
        
        #message {
            font-size: 1.8rem;
            color: #ff3366;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .buttons {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 20px;
            flex-wrap: wrap;
        }
        
        button {
            padding: 18px 45px;
            font-size: 1.8rem;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
