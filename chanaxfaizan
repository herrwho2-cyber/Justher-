<body>
    <div id="heartsContainer"></div>
    
    <div class="container">
        <h1>Will You Be My Valentine?</h1>
        
        <div class="bear-container">
            <div class="bear-gif">
                <img src="https://media.giphy.com/media/l0MYt5jPR6QX5pnqM/giphy.gif" alt="Cute bear 1">
            </div>
            <div class="bear-gif">
                <img src="https://media.giphy.com/media/3o6Zt6ML6BklcajjsA/giphy.gif" alt="Cute bear 2">
            </div>
            <div class="bear-gif">
                <img src="https://media.giphy.com/media/l0MYEqEzwMWFCgHI4/giphy.gif" alt="Cute bear 3">
            </div>
        </div>
        
        <div class="message-box">
            <p id="message">Click a button to begin!</p>
        </div>
        
        <div class="buttons">
            <button id="yesBtn">YES</button>
            <button id="noBtn">NO</button>
        </div>
        
        <p style="margin-top: 20px; color: #ff6699; font-style: italic;">
            The NO button might be tricky to click!
        </p>
    </div>
    
    <div class="final-screen" id="finalScreen">
        <div style="width: 200px; height: 200px; margin-bottom: 30px; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 20px rgba(0,0,0,0.3);">
            <img src="https://media.giphy.com/media/xT5LMHxhOfscxPfIfm/giphy.gif" alt="Happy bear" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <p class="final-text">Awwieee I knew you would say yesss my babuuuu!!! Love u mwah</p>
        <button id="restartBtn">Start Again</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const message = document.getElementById('message');
            const finalScreen = document.getElementById('finalScreen');
            const restartBtn = document.getElementById('restartBtn');
            const heartsContainer = document.getElementById('heartsContainer');
            const container = document.querySelector('.container');
            
            const yesMessages = [
                "Dekh lo babu",
                "bhaiii jhel paoge?",
                "shiii mei chudail hu"
            ];
            
            const noMessages = [
                "Are you sure?",
                "Dekh lo ek baari aur",
                "Pakka na?",
                "Bhaiiiii nhi jhel Paoge mko?",
                "Really?",
                "Last chance!",
                "Okay, I'm sad now",
                "But whyyy?",
                "Please?"
            ];
            
            let yesClickCount = 0;
            let noClickCount = 0;
            let isNoButtonActive = true;
            
            function createHearts(count) {
                for (let i = 0; i < count; i++) {
                    setTimeout(() => {
                        const heart = document.createElement('div');
                        heart.className = 'heart';
                        
                        const left = Math.random() * 100;
                        const size = Math.random() * 15 + 10;
                        const duration = Math.random() * 3 + 4;
                        
                        heart.style.left = `${left}%`;
                        heart.style.width = `${size}px`;
                        heart.style.height = `${size}px`;
                        heart.style.animationDuration = `${duration}s`;
                        heart.style.animationDelay = `${Math.random() * 2}s`;
                        
                        heartsContainer.appendChild(heart);
                        
                        setTimeout(() => {
                            if (heart.parentNode) {
                                heart.remove();
                            }
                        }, duration * 1000);
                    }, i * 300);
                }
            }
            
            setInterval(() => {
                createHearts(3);
            }, 1000);
            
            function moveNoButton() {
                if (!isNoButtonActive) return;
                
                const containerRect = container.getBoundingClientRect();
                const buttonRect = noBtn.getBoundingClientRect();
                
                const maxX = containerRect.width - buttonRect.width - 40;
                const maxY = containerRect.height - buttonRect.height - 20;
                
                const randomX = Math.floor(Math.random() * maxX);
                const randomY = Math.floor(Math.random() * maxY);
                
                noBtn.style.position = 'absolute';
                noBtn.style.left = `${randomX}px`;
                noBtn.style.top = `${randomY}px`;
            }
            
            yesBtn.addEventListener('click', function() {
                if (yesClickCount < yesMessages.length) {
                    message.textContent = yesMessages[yesClickCount];
                    yesClickCount++;
                    
                    message.style.color = "#ff0044";
                    message.style.transform = "scale(1.1)";
                    
                    setTimeout(() => {
                        message.style.transform = "scale(1)";
                        message.style.color = "#ff3366";
                    }, 300);
                    
                    if (yesClickCount === yesMessages.length) {
                        setTimeout(() => {
                            finalScreen.classList.add('active');
                            for (let i = 0; i < 50; i++) {
                                setTimeout(() => createHearts(2), i * 100);
                            }
                        }, 1000);
                    }
                }
            });
            
            noBtn.addEventListener('click', function() {
                if (noClickCount < noMessages.length) {
                    message.textContent = noMessages[noClickCount];
                    noClickCount++;
                    
                    message.style.color = "#ff6699";
                    message.style.transform = "scale(0.95)";
                    
                    setTimeout(() => {
                        message.style.transform = "scale(1)";
                        message.style.color = "#ff3366";
                    }, 300);
                    
                    if (noClickCount >= 2) {
                        setTimeout(moveNoButton, 100);
                    }
                    
                    if (noClickCount >= 5) {
                        noBtn.textContent = "Okay, I give up";
                        noBtn.style.background = "#999999";
                        noBtn.style.cursor = "not-allowed";
                        noBtn.disabled = true;
                        isNoButtonActive = false;
                        message.textContent = "Now try clicking YES!";
                    }
                }
            });
            
            noBtn.addEventListener('mouseenter', function() {
                if (noClickCount >= 2 && isNoButtonActive) {
                    setTimeout(moveNoButton, 200);
                }
            });
            
            restartBtn.addEventListener('click', function() {
                yesClickCount = 0;
                noClickCount = 0;
                isNoButtonActive = true;
                
                message.textContent = "Click a button to begin!";
                message.style.color = "#ff3366";
                
                noBtn.textContent = "NO";
                noBtn.style.background = "#cccccc";
                noBtn.style.cursor = "pointer";
                noBtn.disabled = false;
                noBtn.style.position = 'static';
                
                finalScreen.classList.remove('active');
                
                heartsContainer.innerHTML = "";
            });
            
            createHearts(10);
        });
    </script>
</body>
</html>
